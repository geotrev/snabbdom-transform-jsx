{
  "name": "snabbdom-transform-jsx-props",
  "version": "0.1.5",
  "description": "Intuitive prop syntax for Snabbdom JSX.",
  "main": "lib/snabbdom-transform-jsx-props.js",
  "module": "src/index.js",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "test": "jest",
    "test:perf": "jest --projects jest-bench.config.json",
    "build": "rollup -c config/rollup.build.config.js",
    "eslint:check": "eslint -c .eslintrc.json",
    "prettier:check": "prettier --config .prettierrc.json --check",
    "prettier:write": "prettier --config .prettierrc.json --write",
    "release": "dotenv release-it -- --ci"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/eslint-parser": "^7.18.2",
    "@babel/plugin-transform-react-jsx": "^7.17.12",
    "@babel/preset-env": "^7.18.2",
    "@release-it/conventional-changelog": "^5.0.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "commithelper": "^1.2.0",
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "jest-bench": "^27.5.1",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "release-it": "^15.0.0",
    "rollup": "^2.75.5",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "snabbdom": "^3.5.0"
  },
  "directories": {
    "lib": "lib",
    "src": "src"
  },
  "files": [
    "lib/*.{js,map}",
    "src/**/!(*.spec)*.js"
  ],
  "engines": {
    "node": ">=14.7.0",
    "npm": ">=6.14.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geotrev/snabbdom-transform-jsx-props.git"
  },
  "keywords": [
    "jsx",
    "snabbdom",
    "javascript",
    "virtual dom",
    "virtual node",
    "vnode",
    "vdom"
  ],
  "author": "George Treviranus <geowtrev@gmail.com> (https://geotrev.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/geotrev/snabbdom-transform-jsx-props/issues"
  },
  "homepage": "https://github.com/geotrev/snabbdom-transform-jsx-props#readme",
  "lint-staged": {
    "*.js": [
      "npm run prettier:check",
      "npm run eslint:check"
    ],
    "*.json": [
      "npm run prettier:write"
    ]
  },
  "commithelper": {
    "types": [
      "feat",
      "fix",
      "chore",
      "docs",
      "style",
      "refactor",
      "perf",
      "test"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "before:init": "npm test",
      "after:bump": "rm -rf lib && npm run build"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": "angular"
      }
    }
  }
}
