{
  "name": "snabbdom-transform-jsx-props",
  "version": "0.2.1",
  "description": "Intuitive prop syntax for Snabbdom JSX.",
  "main": "lib/snabbdom-transform-jsx-props.js",
  "module": "src/index.js",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "test": "jest",
    "build": "rollup -c config/rollup.build.config.js",
    "eslint:check": "eslint -c .eslintrc.json",
    "prettier:check": "prettier --config .prettierrc.json --check",
    "prettier:write": "prettier --config .prettierrc.json --write",
    "release": "dotenv release-it --"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-transform-react-jsx": "^7.19.0",
    "@babel/preset-env": "^7.20.2",
    "@release-it/conventional-changelog": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.1",
    "commithelper": "^1.2.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lint-staged": "^13.0.4",
    "paopu": "^0.1.1",
    "prettier": "^2.8.0",
    "release-it": "^15.5.1",
    "rollup": "^2.79.1",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-serve": "^2.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "snabbdom": "^3.5.1"
  },
  "directories": {
    "lib": "lib",
    "src": "src"
  },
  "files": [
    "lib/*.{js,map}",
    "src/**/!(*.spec)*.js"
  ],
  "engines": {
    "node": ">=14.7.0",
    "npm": ">=6.14.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geotrev/snabbdom-transform-jsx-props.git"
  },
  "keywords": [
    "jsx",
    "snabbdom",
    "javascript",
    "virtual dom",
    "virtual node",
    "vnode",
    "vdom"
  ],
  "author": "George Treviranus <geowtrev@gmail.com> (https://geotrev.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/geotrev/snabbdom-transform-jsx-props/issues"
  },
  "homepage": "https://github.com/geotrev/snabbdom-transform-jsx-props#readme",
  "lint-staged": {
    "*.js": [
      "npm run prettier:check",
      "npm run eslint:check"
    ],
    "*.json": [
      "npm run prettier:write"
    ]
  },
  "commithelper": {
    "types": [
      "feat",
      "fix",
      "chore",
      "docs",
      "style",
      "refactor",
      "perf",
      "test"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "before:init": "npm test",
      "after:bump": "rm -rf lib && npm run build"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": "angular"
      }
    }
  }
}
